<script>

    function showContainerDetails(containerNo, BLNo) {
        if (!containerNo) {
            Swal.fire({
                icon: 'error',
                title: 'Error',
                text: 'Container number is required.',
            });
            return;
        }

        fetch(`/InquiryPortal/Details?containerNo=${encodeURIComponent(containerNo)}&blNo=${encodeURIComponent(BLNo)}`)
            .then(response => {
                if (!response.ok) {
                    throw new Error(`Network response was not ok: ${response.status} ${response.statusText}`);
                }
                return response.json();
            })
            .then(data => {
                console.log('Data received:', data);

                if (!data || Object.keys(data).length === 0) {
                    Swal.fire({
                        icon: 'error',
                        title: 'Oops...',
                        text: 'No data found for this container!',
                    });
                    return;
                }

                const tableHtml = generateTableHtml(data);

                Swal.fire({
                    title: 'Container Inquiry Details',
                    html: tableHtml,
                    width: 700,
                    padding: '5px',
                    confirmButtonText: 'Close',
                    confirmButtonColor: '#b22025',
                    showCloseButton: true,
                    customClass: {
                        popup: 'swal2-popup'
                    }
                });
            })
            .catch(error => {
                console.error('There was a problem with the fetch operation:', error);
                Swal.fire({
                    icon: 'error',
                    title: 'Oops...',
                    text: `Something went wrong: ${error.message}`,
                });
            });
    }

    function generateTableHtml(data) {
        console.log(data);
        return `
                <table id="tblhistory1" style="width: 100%; border-collapse: collapse;">
                    <thead>
                        <tr>
                            <th style="padding: 10px; border: 1px solid #ddd;">Detail</th>
                            <th style="padding: 10px; border: 1px solid #ddd;">Value</th>
                        </tr>
                    </thead>
        <tbody>
            ${Object.entries(data).map(([key, value]) => `
                <tr>
                    <td style="padding: 10px; border: 1px solid #ddd;text-align: left;"><strong>${capitalizeFirstLetter(key)}:</strong></td>
                    <td style="padding: 10px; border: 1px solid #ddd;text-align: left;">${value}</td>
                </tr>`).join('')}
        </tbody
                </table>
            `;
    }

    function capitalizeFirstLetter(string) {
        return string.charAt(0).toUpperCase() + string.slice(1);
    }





